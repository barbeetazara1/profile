---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
// import { ViewTransitions } from 'astro:transitions';
---

<Layout title="Baron Betazara">
	<main>
		<header>
            <div class="text-white flex items-center justify-center sticky mt-12">
                <h1 class="text-4xl mr-40">BARON</h1>
                <button class="hamburger">
                    <div class="bar"></div>
                </button>
            </div>
        </header>
        <nav class="mobile-nav">
            <a href="#">About</a>
            <a href="#">Portofolio</a>
            <a href="#">Contact</a>
            <p class="text-black text-xs flex items-center justify-center mt-40">© 2023 Baron Betazara.</p>
        </nav>
		<body>
            <div class="mt-20 px-4">
                <p class="text-white flex items-center justify-center">
                    Lorem Ipsum is simply dummy text of the printing and typesetting industry. 
                    Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, 
                    when an unknown printer took a galley of type and scrambled it to make a type specimen book.
                </p>
            </div>
            
        </body>
	</main>
	<footer>
		<p class="text-white text-xs flex items-center justify-center mt-40">© 2023 Baron Betazara.</p>
	</footer>
    <style>
        .hamburger{
            position: relative;
            display: block;
            width : 35px;
            height : 35px;
            /* left:100px; */
            bottom:2px;
            cursor: pointer;
            apperance: none;
            background: none;
            outline: none;
            border: none;
        }
        .hamburger .bar, .hamburger:after, .hamburger:before{
            content:'';
            display: block;
            width: 100%;
            height: 5px;
            background-color : #FFF;
            margin: 6px 0px;
            transition: 0.4s;
        }

        .hamburger.is-active:before{
            transform: rotate(-45deg) translate(-8px, 6px);
        }

        .hamburger.is-active:after{
            transform: rotate(45deg) translate(-9px, -8px);
        }

        .hamburger.is-active .bar{
            opacity: 0;
        }

        .mobile-nav{
            position: fixed;
            top: 100px;
            left: 100%;
            width: 100%;
            min-height: 100vh;
            display: block;
            z-index: 9; 
            background-color : #DDE6ED;
            padding-top: 120px;
            transition : 0.4s;
            /* opacity: 1; */
        }
        .mobile-nav.is-active{
            left:0;
            /* opacity: 1; */
        }
        .mobile-nav a{
            display: block;
            text-align: center;
            max-width: 200px;
            margin: 0 auto 16px;
            width : 100%;
            padding: 12px 16px;
            background-color: black;
            color: white;
            /* font-weight: bold; */
        }
    </style>
    <script>
        const menu_btn = document.querySelector('.hamburger');
        const mobile_btn = document.querySelector('.mobile-nav');

        menu_btn.addEventListener('click', function () {
            menu_btn.classList.toggle('is-active');
            mobile_btn.classList.toggle('is-active');
        });
    </script>
</Layout>

