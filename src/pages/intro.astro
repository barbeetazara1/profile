    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            height: 100vh;
            background-color:black;
        }
        li {
            list-style:none;
        }
        /* a:hover{
            color:red;
        } */

        /* Header */
        header{
            position: relative;
            padding: 0 2rem;
        }
        .navbar{
            width:100%;
            height:60px;
            max-width:1200px;
            margin:0 auto;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        .navbar .logo a{
            font-size: 1.5rem;
            font-weight:bold;
            cursor: default;
        }
        .navbar .links {
            display:flex;
            gap: 2rem;
        }

        .navbar .toggle_btn{
            font-size:1.5rem;
            cursor:pointer;
            display:none;
        }
        .started_btn{
            background-color: #FF007F;
            color:#fff;
            padding: 0.5rem 1rem;
            border:none;
            outline:none;
            border-radius:20px;
            font-size: 0.8rem;
            font-weight:bold;
            cursor:pointer;
            transition: scale 0.2 ease;
        }
        .started_btn:hover{
            scale:1.05;
            color:#fff;
        }
        .started_btn:active{
            scale:0.95;
        }
        .started_btn2{
            background-color: #FF007F;
            color:#fff;
            padding: 0.5rem 1rem;
            border:none;
            outline:none;
            border-radius:20px;
            font-size: 0.8rem;
            font-weight:bold;
            cursor:pointer;
            transition: scale 0.2 ease;
        }
        .started_btn2:hover{
            scale:1.05;
            color:#fff;
        }
        .started_btn2:active{
            scale:0.95;
        }
        /* DropDown Menu */
        .dropdown_menu{
            /* display:none; */
            position: absolute;
            right:2rem;
            top:60px;
            width:300px;
            height:0;
            background: rgba(255,255,255,0.1);
            backdrop-filter:blur(15px);
            border-radius:10px;
            overflow:hidden;
            transition: height 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        }
        .dropdown_menu.open{
            height:210px;
        }
        .dropdown_menu li{
            padding: 0.7rem;
            display:flex;
            align-items:center;
            justify-content:center;
        }
        .dropdown_menu .started_btn2{
            width:100%;
            display:flex;
            justify-content:center;
        }
        /* RESPONSIVE */
        @media (max-width:992px){
            .navbar .links,
            .navbar .started_btn{
                display:none;
            }
            .navbar .toggle_btn{
                display:block;
            }
            .dropdown_menu{
                display:block;
            }
        }
        @media (max-width:576px){
            .dropdown_menu{
                left:2rem;
                width:unset;
            }
        }
        @media (min-width:992px){
            .links a{
                position:relative;
            }
            .links a:after{
                content:"";
                position:absolute;
                background-color: white;
                height:3px;
                width:0;
                left:0;
                bottom:-10px;
                transition: 0.3s;
            }
            .links a:hover:after{
                width:100%;
            }
        }

        .bg1{
            height : 500px;
            widht : 100px;
            background-color: white;
            margin-top : 20px;
        }
        .bg2{
            height : 500px;
            widht : 100px;
            background-color: black;
        }

    </style>
    <script>
        const drop_down = document.querySelector('.dropdown_menu');
        const toggle_btn = document.querySelector('.toggle_btn');

        toggle_btn.addEventListener('click', function () {
            drop_down.classList.toggle('open');
        });
    </script>
</Layout>

